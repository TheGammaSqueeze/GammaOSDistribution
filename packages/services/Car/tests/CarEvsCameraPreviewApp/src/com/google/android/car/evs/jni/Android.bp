package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_library_shared {
    name: "libcarevsglrenderer_jni",

    sdk_version: "current",

    srcs: [
        "CarEvsCameraPreviewRenderer.cpp",
    ],

    header_libs: ["jni_headers"],

    shared_libs: [
        "libandroid",
        "libEGL",
        "libGLESv2",
        "liblog",
        "libnativehelper",
        "libnativewindow",
    ],

    strip: {
        keep_symbols: true,
    },

    cflags: [
        "-DLOG_TAG=\"CarEvsCameraRendererJNI\"",
        "-DGL_GLEXT_PROTOTYPES",
        "-DEGL_EGLEXT_PROTOTYPES",
        "-Wall",
        "-Werror",
        "-Wunused",
        "-Wunreachable-code",
        "-fvisibility=hidden",
    ],
}
