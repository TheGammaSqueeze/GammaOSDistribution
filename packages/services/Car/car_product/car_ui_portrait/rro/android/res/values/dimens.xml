    <!-- Toast corner radius -->
    <dimen name="toast_corner_radius">24dp</dimen>
    <!-- Toast margin -->
    <dimen name="toast_margin">24dp</dimen>
    <!-- Toast elevation -->
    <dimen name="toast_elevation">2dp</dimen>
    <!-- Toast max width -->
    <dimen name="toast_width">760dp</dimen>
