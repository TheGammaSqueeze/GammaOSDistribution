<org.lineageos.flipflap.IceviewNotificationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#4dffffff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iceview_notification_icon"
            android:layout_width="@dimen/iceview_notification_icon_size"
            android:layout_height="@dimen/iceview_notification_icon_size"
            android:paddingRight="@dimen/iceview_notification_icon_padding" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/iceview_notification_title"
                style="@style/iceview_notification_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/iceview_notification_description"
                style="@style/iceview_notification_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/iceview_notification_description_padding" />
        </LinearLayout>
    </LinearLayout>
</org.lineageos.flipflap.IceviewNotificationView>
