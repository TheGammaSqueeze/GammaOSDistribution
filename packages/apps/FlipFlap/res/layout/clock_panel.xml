<!-- digital clock for the digital widget -->
<org.lineageos.flipflap.ClockPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:background="@android:color/transparent" >

    <!-- Digital clock -->
    <LinearLayout
        android:id="@+id/digital_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:layoutDirection="ltr"
        android:layout_gravity="center_horizontal|top" >

        <!-- Time -->
        <TextClock
            android:id="@+id/the_clock"
            style="@style/widget_medium_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:maxLines="1"
            android:layout_gravity="top|center"
            android:textColor="@color/clock_white" />
    </LinearLayout>
</org.lineageos.flipflap.ClockPanel>
