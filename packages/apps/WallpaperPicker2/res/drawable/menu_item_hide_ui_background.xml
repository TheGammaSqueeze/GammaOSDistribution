<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="@dimen/menu_item_hide_ui_background_width"
                        android:height="@dimen/menu_item_hide_ui_background_height" />
                    <solid android:color="?androidprv:attr/colorAccentSecondary" />
                </shape>
            </item>
            <item
                android:width="@dimen/menu_item_hide_ui_icon_size"
                android:height="@dimen/menu_item_hide_ui_icon_size"
                android:drawable="@drawable/ic_visibilityoff_24px"
                android:gravity="center" />
        </layer-list>
    </item>
</ripple>
