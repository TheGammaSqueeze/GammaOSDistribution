cc_library_shared {
    name: "libgpumemtracer",
    srcs: [
        "GpuMemTracer.cpp",
    ],
    shared_libs: [
        "libgpumem",
        "libbase",
        "liblog",
        "libutils",
    ],
    static_libs: [
        "libperfetto_client_experimental",
    ],
    export_include_dirs: ["include"],
    export_static_lib_headers: [
        "libperfetto_client_experimental",
    ],
    cppflags: [
        "-Wall",
        "-Werror",
        "-Wformat",
        "-Wthread-safety",
        "-Wunused",
        "-Wunreachable-code",
    ],
}
