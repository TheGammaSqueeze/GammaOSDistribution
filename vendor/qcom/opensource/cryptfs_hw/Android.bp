sourceFiles = ["cryptfs_hw.cpp"]

commonSharedLibraries = [
    "libcutils",
    "libutils",
    "libdl",
    "libhardware",
    "liblog",
    "libhidlbase",
    "libbinder",
    "vendor.qti.hardware.cryptfshw@1.0",
]

cc_library_shared {
    name: "libcryptfs_hw",
    defaults: [
      "legacy_hw_disk_encryption_defaults",
    ],
    header_libs: ["libhardware_headers"],
    srcs: sourceFiles,
    shared_libs: commonSharedLibraries,

    owner: "qti",
    system_ext_specific: true,
}

cc_library_headers {
    name: "libcryptfs_hw_headers",
    export_include_dirs: ["."],
}
