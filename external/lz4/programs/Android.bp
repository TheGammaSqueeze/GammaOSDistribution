package {
    default_applicable_licenses: ["external_lz4_programs_license"],
}

license {
    name: "external_lz4_programs_license",
    visibility: [":__subpackages__"],
    license_kinds: [
        "SPDX-license-identifier-GPL",
        "SPDX-license-identifier-GPL-2.0",
        "SPDX-license-identifier-LGPL",
    ],
    license_text: [
        "COPYING",
    ],
}

cc_binary_host {
    name: "lz4",
    srcs: [
        "datagen.c",
        "bench.c",
        "lz4io.c",
        "lz4cli.c",
    ],
    cflags: ["-Wall", "-Werror"],
    static_libs: ["liblz4"],
    stl: "libc++_static",
}

cc_binary_host {
    name: "lz4c",
    cflags: [
        "-DENABLE_LZ4C_LEGACY_OPTIONS",
        "-Wall",
        "-Werror",
    ],
    srcs: [
        "datagen.c",
        "bench.c",
        "lz4io.c",
        "lz4cli.c",
    ],
    static_libs: ["liblz4"],
    stl: "libc++_static",
}
