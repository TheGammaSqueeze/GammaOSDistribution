package {
    // See: http://go/android-license-faq
    // A large-scale-change added 'default_applicable_licenses' to import
    // all of the 'license_kinds' from "external_icu_icu4c_license"
    // to get the below license kinds:
    //   SPDX-license-identifier-MIT
    //   SPDX-license-identifier-Unicode-DFS
    //   legacy_unencumbered
    default_applicable_licenses: ["external_icu_icu4c_license"],
}

subdirs = [
    "cintltst",
    "intltest",
]

cc_defaults {
    name: "icu_test_defaults",
    gtest: false,
    rtti: true,
    cflags: [
        "-Wno-deprecated-declarations",
        "-Wno-missing-field-initializers",
        "-Wno-unused-function",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
    ],
    c_std: "c11",
    cpp_std: "c++11",
    shared_libs: [
        "libicu_cts_stub",
        "libicuuc_cts_stub",
        "libicui18n_cts_stub",
        "libbase",
        "liblog",
    ],

    static_libs: [
        "libicuctest",
        "libicutoolutil",
    ],
    target: {
        android: {
            cflags: [
                // Required to link libicuuc_cts_stub
                "-DANDROID_LINK_SHARED_ICU4C",
                // Do not set the data directory explicitly on Android because libicuuc has set it.
                "-DANDROID_USE_ICU_REG",
            ],
        },
    },
}
