              <action android:name="android.service.dreams.DreamService"/>
              <category android:name="android.intent.category.DEFAULT"/>
          </intent-filter>
      </service>
      <activity android:exported="true" android:icon="@mipmap/ic_launcher" android:label="@string/flipper_screensaver_name" android:name="FlipperDreamSettings">
          <intent-filter>
              <action android:name="android.intent.action.MAIN"/>
              <category android:name="android.intent.category.DEFAULT"/>
          </intent-filter>
      </activity>
  </application>
</manifest>
