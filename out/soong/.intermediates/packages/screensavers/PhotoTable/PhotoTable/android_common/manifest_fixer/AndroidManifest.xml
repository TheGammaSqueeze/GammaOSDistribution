          <meta-data android:name="android.service.dream" android:resource="@xml/photo_table_dream"/>
          <intent-filter>
              <action android:name="android.service.dreams.DreamService"/>
              <category android:name="android.intent.category.DEFAULT"/>
          </intent-filter>
      </service>
      <activity android:exported="true" android:icon="@mipmap/ic_launcher" android:label="@string/table_screensaver_name" android:name="PhotoTableDreamSettings">
          <intent-filter>
              <action android:name="android.intent.action.MAIN"/>
              <category android:name="android.intent.category.DEFAULT"/>
          </intent-filter>
      </activity>
      <service android:exported="true" android:icon="@mipmap/ic_launcher" android:label="@string/flipper_screensaver_name" android:name="FlipperDream" android:permission="android.permission.BIND_DREAM_SERVICE">
