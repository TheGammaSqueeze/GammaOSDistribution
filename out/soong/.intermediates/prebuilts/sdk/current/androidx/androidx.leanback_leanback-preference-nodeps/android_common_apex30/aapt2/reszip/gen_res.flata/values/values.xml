<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="default_preference_brand_color_legacy">#FF37474F</color>
    <color name="default_preference_window_background_legacy">#263238</color>
    <color name="lb_preference_item_primary_text_color_default">#EEEEEE</color>
    <color name="lb_preference_item_primary_text_color_disabled">#4DEEEEEE</color>
    <color name="lb_preference_item_secondary_text_color_default">#B3EEEEEE</color>
    <color name="lb_preference_item_secondary_text_color_disabled">#4DEEEEEE</color>
    <dimen name="lb_preference_category_padding_bottom">12dp</dimen>
    <dimen name="lb_preference_category_padding_top">12dp</dimen>
    <dimen name="lb_preference_category_text_size">12sp</dimen>
    <dimen name="lb_preference_decor_elevation">6dp</dimen>
    <dimen name="lb_preference_decor_title_container_elevation">2dp</dimen>
    <dimen name="lb_preference_decor_title_margin_top">27dp</dimen>
    <dimen name="lb_preference_decor_title_text_height">64dp</dimen>
    <dimen name="lb_preference_decor_title_text_size">20sp</dimen>
    <dimen name="lb_preference_item_icon_margin_end">16dp</dimen>
    <dimen name="lb_preference_item_icon_size">24dp</dimen>
    <dimen name="lb_preference_item_padding_end">56dp</dimen>
    <dimen name="lb_preference_item_padding_start">24dp</dimen>
    <dimen name="lb_preference_item_primary_text_margin_bottom">2dp</dimen>
    <dimen name="lb_preference_item_primary_text_size">14sp</dimen>
    <dimen name="lb_preference_item_secondary_text_size">12sp</dimen>
    <dimen name="lb_preference_item_text_space_bottom">13dp</dimen>
    <dimen name="lb_preference_item_text_space_top">14dp</dimen>
    <dimen name="lb_preference_seekbar_padding_end">22dp</dimen>
    <dimen name="lb_preference_seekbar_padding_start">0dp</dimen>
    <dimen name="lb_preference_seekbar_value_width">36dp</dimen>
    <dimen name="lb_settings_pane_width">360dp</dimen>
    <style name="LeanbackPreference">
        <item name="android:layout">@layout/leanback_preference</item>
    </style>
    <style name="LeanbackPreference.Category">
        <item name="android:layout">@layout/leanback_preference_category</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>
    <style name="LeanbackPreference.CheckBoxPreference">
        <item name="android:layout">@layout/leanback_preference</item>
        <item name="android:widgetLayout">@layout/leanback_preference_widget_checkbox</item>
    </style>
    <style name="LeanbackPreference.DialogPreference">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>
    <style name="LeanbackPreference.DialogPreference.EditTextPreference">
        <item name="android:dialogLayout">@layout/preference_dialog_edittext</item>
    </style>
    <style name="LeanbackPreference.EditText" parent="android:Widget.Material.EditText">
        <item name="android:layout_marginStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">?android:attr/listPreferredItemPaddingEnd</item>
    </style>
    <style name="LeanbackPreference.Information">
        <item name="android:layout">@layout/leanback_preference_information</item>
        <item name="android:enabled">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>
    <style name="LeanbackPreference.PreferenceScreen">
    </style>
    <style name="LeanbackPreference.SeekBarPreference">
        <item name="android:layout">@layout/leanback_preference_widget_seekbar</item>
        <item name="adjustable">true</item>
        <item name="showSeekBarValue">true</item>
    </style>
    <style name="LeanbackPreference.SubTitle">
        <item name="android:textAppearance">?android:attr/subtitleTextAppearance</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingTop">@dimen/lb_preference_item_text_space_top</item>
        <item name="android:paddingBottom">@dimen/lb_preference_item_text_space_bottom</item>
        <item name="android:maxLines">4</item>
    </style>
    <style name="LeanbackPreference.SwitchPreference">
        <item name="android:widgetLayout">@layout/leanback_preference_widget_switch</item>
        <item name="android:switchTextOn">@string/v7_preference_on</item>
        <item name="android:switchTextOff">@string/v7_preference_off</item>
    </style>
    <style name="LeanbackPreference.SwitchPreferenceCompat">
        <item name="android:widgetLayout">@layout/leanback_preference_widget_switch</item>
        <item name="android:switchTextOn">@string/v7_preference_on</item>
        <item name="android:switchTextOff">@string/v7_preference_off</item>
    </style>
    <style name="LeanbackPreference.Title">
        <item name="android:minHeight">@dimen/lb_preference_decor_title_text_height</item>
        <item name="android:layout_marginTop">@dimen/lb_preference_decor_title_margin_top</item>
        <item name="android:layout_marginStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:textAppearance">?android:attr/titleTextAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PreferenceFragment.Leanback">
        <item name="android:divider">@null</item>
    </style>
    <style name="PreferenceFragmentList.Leanback">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">34dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="PreferenceThemeOverlay.v14.Leanback" parent="PreferenceThemeOverlayLeanback"/>
    <style name="PreferenceThemeOverlayLeanback" parent="PreferenceThemeOverlayLeanbackBase">
        <item name="checkBoxPreferenceStyle">@style/LeanbackPreference.CheckBoxPreference</item>
        <item name="dialogPreferenceStyle">@style/LeanbackPreference.DialogPreference</item>
        <item name="dropdownPreferenceStyle">@style/Preference.DropDown</item>
        <item name="editTextPreferenceStyle">@style/LeanbackPreference.DialogPreference.EditTextPreference</item>
        <item name="preferenceCategoryStyle">@style/LeanbackPreference.Category</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Leanback</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Leanback</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Leanback</item>
        <item name="preferenceInformationStyle">@style/LeanbackPreference.Information</item>
        <item name="preferenceScreenStyle">@style/LeanbackPreference.PreferenceScreen</item>
        <item name="preferenceStyle">@style/LeanbackPreference</item>
        <item name="seekBarPreferenceStyle">@style/LeanbackPreference.SeekBarPreference</item>
        <item name="switchPreferenceCompatStyle">@style/LeanbackPreference.SwitchPreferenceCompat</item>
        <item name="switchPreferenceStyle">@style/LeanbackPreference.SwitchPreference</item>
    </style>
    <style name="PreferenceThemeOverlayLeanbackBase">
        <!-- settings panel background color -->
        <item name="android:windowBackground">@color/default_preference_window_background_legacy</item>

        <!-- no accent color defined < v28: we use material default accent color -->

        <!-- settings title panel background color -->
        <item name="android:colorPrimary">@color/default_preference_brand_color_legacy</item>

        <!-- text appearance for Settings panel main title, it by default reference titleTextColor for text color -->
        <item name="android:titleTextAppearance">@style/TextAppearance.LeanbackPreference.Title</item>

        <!-- text appearance for Settings panel 2nd title below main title, it by default reference subtitleTextColor for text color -->
        <item name="android:subtitleTextAppearance">@style/TextAppearance.LeanbackPreference.SubTitle</item>

        <!-- text appearance for item text, it by default reference textColorPrimary for text color -->
        <item name="android:textAppearanceListItem">@style/TextAppearance.LeanbackPreference.ListItem</item>

        <!-- text appearance for item second text, it by default reference textColorSecondary for text color -->
        <item name="android:textAppearanceListItemSecondary">@style/TextAppearance.LeanbackPreference.ListItem.Secondary</item>

        <!-- text appearance for category, it by default reference textColorTertiary text color -->
        <item name="android:textAppearanceListItemSmall">@style/TextAppearance.LeanbackPreference.Category</item>

        <!-- padding start for each item -->
        <item name="android:listPreferredItemPaddingStart">@dimen/lb_preference_item_padding_start</item>

        <!-- padding end for each item -->
        <item name="android:listPreferredItemPaddingEnd">@dimen/lb_preference_item_padding_end</item>

        <!-- color for item text -->
        <item name="android:textColorPrimary">@color/lb_preference_item_primary_text_color</item>

        <!-- color for item second text -->
        <item name="android:textColorSecondary">@color/lb_preference_item_secondary_text_color</item>

        <!-- color for category text by default is colorAccent -->
        <item name="android:textColorTertiary">?android:attr/colorAccent</item>

        <!-- style of window title TextView, customize margin, minHeight can be done here -->
        <item name="android:titleTextStyle">@style/LeanbackPreference.Title</item>

        <!-- style of subtitle for Dialog -->
        <item name="android:subtitleTextStyle">@style/LeanbackPreference.SubTitle</item>

        <!-- style of EditText for EditTextPreference -->
        <item name="android:editTextStyle">@style/LeanbackPreference.EditText</item>

        <!-- android:colorControlNormal is color of unchecked checkbox and radio, seekbar's track it is by default same as textColorPrimary -->
        <item name="android:colorControlNormal">@color/lb_preference_item_primary_text_color_default</item>

        <!-- android:colorControlActivated normally uses the "blue" colorAccent for checkbox, switch, seekbar, etc -->
        <item name="android:colorControlActivated">?android:attr/colorAccent</item>

        <!-- style for the icon-->
        <item name="android:imageButtonStyle">@null</item>

    </style>
    <style name="TextAppearance.LeanbackPreference.Category" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">@dimen/lb_preference_category_text_size</item>
    </style>
    <style name="TextAppearance.LeanbackPreference.ListItem" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/lb_preference_item_primary_text_size</item>
    </style>
    <style name="TextAppearance.LeanbackPreference.ListItem.Secondary" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/lb_preference_item_secondary_text_size</item>
    </style>
    <style name="TextAppearance.LeanbackPreference.SubTitle" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/lb_preference_item_primary_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextAppearance.LeanbackPreference.SubTitle.V23" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/lb_preference_item_primary_text_size</item>
        <item name="android:textColor">?android:attr/subtitleTextColor</item>
    </style>
    <style name="TextAppearance.LeanbackPreference.Title" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/lb_preference_decor_title_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextAppearance.LeanbackPreference.Title.V23" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/lb_preference_decor_title_text_size</item>
        <item name="android:textColor">?android:attr/titleTextColor</item>
    </style>
</resources>