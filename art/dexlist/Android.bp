package {
    // See: http://go/android-license-faq
    // A large-scale-change added 'default_applicable_licenses' to import
    // all of the 'license_kinds' from "art_license"
    // to get the below license kinds:
    //   SPDX-license-identifier-Apache-2.0
    default_applicable_licenses: ["art_license"],
}

art_cc_binary {
    name: "dexlist",
    defaults: ["art_defaults"],
    host_supported: true,
    srcs: ["dexlist.cc"],
    shared_libs: [
        "libdexfile",
        "libartbase",
        "libbase",
    ],
    apex_available: [
        "com.android.art",
        "com.android.art.debug",
    ],
}

art_cc_binary {
    name: "dexlists",
    defaults: [
        "art_defaults",
        "libartbase_static_defaults",
        "libdexfile_static_defaults",
    ],
    host_supported: true,
    srcs: ["dexlist.cc"],
    device_supported: false,
    target: {
        darwin: {
            enabled: false,
        },
        windows: {
            enabled: true,
        },
    },
}

art_cc_defaults {
    name: "art_dexlist_tests_defaults",
    srcs: ["dexlist_test.cc"],
    target: {
        host: {
            required: ["dexlist"],
        },
    },
}

// Version of ART gtest `art_dexlist_tests` bundled with the ART APEX on target.
// TODO(b/192274705): Remove this module when the migration to standalone ART gtests is complete.
art_cc_test {
    name: "art_dexlist_tests",
    defaults: [
        "art_gtest_defaults",
        "art_dexlist_tests_defaults",
    ],
}

// Standalone version of ART gtest `art_dexlist_tests`, not bundled with the ART APEX on target.
art_cc_test {
    name: "art_standalone_dexlist_tests",
    defaults: [
        "art_standalone_gtest_defaults",
        "art_dexlist_tests_defaults",
    ],
}
